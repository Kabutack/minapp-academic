.container{
    /*background-color: #7acfa6;*/
    align-items: stretch;
    padding: 0;
    height: 100%;
    overflow: hidden;
}
.content{
    width: 100%;
    height: 100%;
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: stretch;
    justify-content: center;
    padding-bottom: 450rpx;
    background: #F4F4F4;
    /*position: relative;*/
}
.hd{
    width: 100%;
    height: 30%;
    display: flex;
    flex-direction: column;
    align-items: center;
    /*position: absolute;*/
    /*top: 0;*/
    /*left: 50%;*/
    /*margin-left: -500rpx;*/
}
.logo01{
    width: 160rpx;
    height: 160rpx;
}
.logo02{
    width: 360rpx;
    height: 105rpx;
}
.bd{
    width: 100%;
    height: 70%;
    display: flex;
    flex-direction: column;
    align-items: stretch;
}
.login-form{
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: stretch;
    justify-content: center;
}
.input-group{
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 25rpx 10rpx;
    margin: 40rpx 3%;
    background: #fff;
    border-radius: 5px;
    border: 2px solid #F4F4F4;
}
/*.input-group.active{
    border: 2px solid #7acfa6;
}*/
.input-label{
    color: #888;
    border-right: 1px solid #d8d8d8;
    font-size: 13pt;
    height: 25rpx;
    line-height: 25rpx;
    padding: 0 25rpx;
}
.input-group input,
.input-group picker{
    font-size: 13pt;
    height: 52rpx;
    line-height: 52rpx;
    min-height: 52rpx;
    padding: 0 25rpx;
    flex: 1;
}
.input-placeholder,
.input-group picker.placeholder {
  color: #ccc;
}
.comfirm-btn{
    font-size: 13pt;
    height: 85rpx;
    line-height: 85rpx;
    background: #7acfa6;
    color: #fff;
    text-align: center;
    margin: 50rpx 3%;
    border-radius: 5px;
}