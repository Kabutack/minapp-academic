<!--login.wxml-->
<view class="container">
    <view class="content">
        <view class="hd">
            <image class="logo01" src="/images/more/logo01.png" mode="aspectFit"></image>
            <image class="logo02" src="/images/more/logo02.png" mode="aspectFit"></image>
        </view>
        <view class="bd">
            <form class="login-form">
                <view class="input-group">
                    <text class="input-label">账号</text>
                    <input type="number" placeholder="请输入学号" cursor-spacing="30" maxlength="12"/>
                </view>
                <view class="input-group">
                    <text class="input-label">密码</text>
                    <input password="true" placeholder="请输入密码" cursor-spacing="30"  />
                </view>
            </form>
            <view class="comfirm-btn">
                <text>确认绑定</text>
            </view>
        </view>
    </view>
</view>